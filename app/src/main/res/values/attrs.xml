<resources>
    <declare-styleable name="CompoundButton">
        <attr name="android:button" />
    </declare-styleable>

    <attr name="image" format="reference"></attr>
    <declare-styleable name="CustomBgView">
        <attr name="image" />
    </declare-styleable>

    <declare-styleable name="myswiperefreshlayout">
        <attr name="direction_live">
            <enum name="top" value="0" />
            <enum name="bottom" value="1" />
            <enum name="both" value="2" />
        </attr>
    </declare-styleable>

    <!--自定义MLImageView的属性 加上了自己的前缀，防止和其他自定义控件冲突-->
    <declare-styleable name="SuperImageView">
        <attr name="super_border_color" format="color" />
        <attr name="super_border_width" format="dimension" />
        <attr name="super_press_alpha" format="integer" />
        <attr name="super_press_color" format="color" />
        <attr name="super_radius" format="dimension" />
        <attr name="super_shape_type" format="enum">
            <enum name="none" value="0" />
            <enum name="round" value="1" />
            <enum name="rectangle" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="roundedimageview">
        <attr name="border_thickness_num" format="dimension" />
        <attr name="border_inside_color_rd" format="color" />
        <attr name="border_progress_color" format="color" />
        <attr name="border_outside_color_rd" format="color" />
        <attr name="show_image" format="boolean" />
    </declare-styleable>
</resources>