<?xml version="1.0" encoding="utf-8"?>
<!-- shape如果不声明形状则默认为正方形 -->
<shape xmlns:android="http://schemas.android.com/apk/res/android" >

    <corners android:radius="8dp" />
    <!-- 圆角，你也可以对不同的角设置不同的数值 -->

    <gradient
        android:angle="270"
        android:endColor="#e3e4e6"
        android:startColor="#FFFFFF"
        android:type="linear" />

    <stroke
        android:width="1dp"
        android:color="@color/skyblue" />
    <!-- 边框宽度和颜色 -->

</shape>