<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:baselineAligned="false"
    android:background="@drawable/microclass_classlist_item_select"
    android:orientation="horizontal">
    
    <RelativeLayout 
        android:id="@+id/RL_coursePack_list_image"
        android:layout_width="wrap_content"
        android:layout_height="85dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">
        
        <ImageView
            android:id="@+id/native_main_image"
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:background="@drawable/microclass_mobclasslist_item_image"
            android:scaleType="fitXY" />
        
        <ImageView
            android:id="@+id/coursePack_pin_pic"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/microclass_courseack_pin_pic"
            android:scaleType="fitStart" />
        
    </RelativeLayout>
    

    <LinearLayout 
        android:id="@+id/LL_coursePack_content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
        
        <RelativeLayout 
            android:id="@+id/LL_coursePack_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/native_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="6dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/black"
                android:text="有道广告的标题"
                android:textSize="18sp" />
            <RelativeLayout 
                android:id="@+id/RL_courseNum"
                android:layout_width="35dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp">
                <ImageView 
	                android:id="@+id/native_ad_iv_sign"
	                android:layout_width="35dp"
	                android:layout_height="30dp"
	                android:layout_alignParentRight="true"
	                android:background="@drawable/microclass_coursepack_num"/>
                <TextView 
	                android:id="@+id/native_ad_tv_sign"
	                android:layout_width="20dp"
	                android:layout_height="12dp"
	                android:layout_centerHorizontal="true"
	                android:layout_centerInParent="true"
	                android:text="推广"
	                android:textSize="10sp"
	                android:textColor="@color/white"
	                android:layout_marginRight="5dp"/>
            </RelativeLayout>

        </RelativeLayout>
        
        <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="6dp"
	        android:layout_marginLeft="13dp"
	        android:layout_marginRight="13dp"
	        android:layout_marginTop="4dp"
	        android:gravity="center"
	        android:orientation="vertical" >
            <TextView
                android:id="@+id/native_text"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:ellipsize="end"
                android:maxLines="3"
                android:textColor="@color/gray"
                tools:text="有道广告内容描述有道广告内容描述有道广告内容描述有道广告内容描述有道广告内容描述有道广告内容描述"
                android:lineSpacingMultiplier="1.2"
                android:textSize="13sp" />
            
            <RelativeLayout
                android:id="@+id/ll_coursePack_price_and_viewCount"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:visibility="gone"
                android:layout_marginBottom="0dp">
                
                <LinearLayout 
                    android:id="@+id/ll_coursePack_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="5dp"
                    android:layout_alignParentLeft="true">
                    
                    <TextView 
                        android:id="@+id/tv_coursePack_oldprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray"
                        android:text="1000"/>
                    
                    <TextView 
                        android:id="@+id/tv_coursePack_newprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/red"
                        android:text="800"/>
                </LinearLayout>
                
                <LinearLayout 
                    android:id="@+id/ll_coursePack_viewCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginRight="5dp"
                    android:layout_alignParentRight="true">
                    <TextView 
                        android:id="@+id/tv_coursePack_viewCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2.2万"
                        android:textColor="@color/gray"/>
                    
                    <ImageView 
                        android:id="@+id/iv_coursePack_viewVount"
                        android:layout_width="20dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/view_count"
                        />
                </LinearLayout>
            </RelativeLayout>
    	</LinearLayout>
        
    </LinearLayout>

</LinearLayout>