<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView

        android:id="@+id/en"
        android:layout_marginTop="@dimen/x15"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:textSize="@dimen/x14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/see_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/en"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/x15"
        android:layout_marginRight="@dimen/x60"
        android:background="@drawable/trainingcamp_rec_light"
        android:textColor="?attr/baseTheme"
        android:paddingLeft="@dimen/x5"
        android:paddingRight="@dimen/x5"
        android:textSize="@dimen/x11"
        android:text="查看解析"/>
    <ImageView
        android:id="@+id/result"
        android:layout_below="@id/en"
        android:layout_marginTop="@dimen/x10"
        android:layout_width="@dimen/x39"
        android:layout_height="@dimen/x36"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/x22"
        android:src="@drawable/trainingcamp_icon_true"/>
    <TextView
        android:layout_below="@id/result"
        android:id="@+id/more"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:layout_height="wrap_content"
        android:background="#10F97127"
        android:textSize="@dimen/x12"
        android:textColor="#FF7F7F7F"
        android:paddingLeft="@dimen/x10"
        android:paddingRight="@dimen/x10"
        android:paddingTop="@dimen/x12"
        android:paddingBottom="@dimen/x12"
        android:visibility="gone"/>

</RelativeLayout>