<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/rr_root"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/trainingcamp_white_pure"
                android:orientation="vertical">

    <include
        android:id="@+id/title_top"
        layout="@layout/trainingcamp_title_layout"></include>

    <TextView
        android:id="@+id/position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/x16"
        android:textColor="?attr/baseTheme"
        android:text="1/10"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/x10"
        android:layout_below="@+id/title_top"/>

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/position"
        android:layout_marginLeft="@dimen/x21"
        android:layout_marginRight="@dimen/x21"
        android:layout_marginTop="@dimen/x22"
        android:background="@drawable/trainingcamp_oval_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/x40"
        android:paddingTop="@dimen/x40">

        <TextView
            android:id="@+id/word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="android"
            android:textColor="@color/trainingcamp_white_pure"
            android:textSize="@dimen/x16"/>

        <RelativeLayout
            android:id="@+id/ll_pronounce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/pro"
                android:layout_width="@dimen/x25"
                android:layout_height="@dimen/x25"
                android:scaleType="center"
                android:src="@drawable/trainingcamp_fayin"
                android:text="android"/>
            <TextView
                android:id="@+id/word_pronounce"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@+id/pro"
                android:lines="1"
                android:layout_height="@dimen/x25"
                android:layout_marginLeft="@dimen/x5"
                android:text="android"
                android:textColor="@color/trainingcamp_white_pure"
                android:gravity="center_vertical"
                android:textSize="@dimen/x14"/>



        </RelativeLayout>

    </LinearLayout>

    <EditText
        android:id="@+id/et"
        android:layout_width="@dimen/x200"
        android:layout_height="wrap_content"
        android:singleLine="true"
        tools:text="heiheidsfasdifsadjfjskdlfjsal;kdfjalsfjldsjflkadsfjk;ads"
        android:layout_below="@id/ll"
        android:layout_centerHorizontal="true"
        android:digits="-abcdefghijklmnopqrstuvwxyzABCDEFGHEJKLMNOPQRSTUVWXYZ"
        android:maxLength="20"
        android:textCursorDrawable="@null"
        android:background="@drawable/trainingcamp_study_selector"
        android:layout_marginTop="@dimen/x18"/>

    <Button
        android:id="@+id/next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="下一题"
        android:background="@drawable/trainingcamp_study_selector"
        android:layout_toRightOf="@id/et"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:layout_marginBottom="@dimen/x28"
        android:layout_marginRight="@dimen/x22"/>


    <LinearLayout
        android:id="@+id/ll_pic1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll"
        android:layout_marginTop="@dimen/x24"
        android:gravity="center"
        tools:visibility="visible"

        android:visibility="gone">

        <ImageView
            android:id="@+id/image1"
            android:layout_width="0dp"
            android:layout_height="@dimen/x80"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:layout_weight="1"
            android:src="@drawable/trainingcamp_score_default"/>

        <ImageView
            android:id="@+id/image2"
            android:layout_width="0dp"
            android:layout_height="@dimen/x80"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:src="@drawable/trainingcamp_score_default"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_pic2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_pic1"
        android:layout_marginLeft="@dimen/x16"
        android:layout_marginRight="@dimen/x16"
        android:layout_marginTop="@dimen/x12"
        android:gravity="center"
        tools:visibility="visible"
        android:visibility="gone">

        <ImageView
            android:id="@+id/image3"
            android:layout_width="0dp"
            android:layout_height="@dimen/x80"
            android:layout_marginRight="@dimen/x10"
            android:src="@drawable/trainingcamp_score_default"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/image4"
            android:layout_width="0dp"
            android:layout_height="@dimen/x80"
            android:layout_marginLeft="@dimen/x10"
            android:src="@drawable/trainingcamp_score_default"
            android:layout_weight="1"/>
    </LinearLayout>

    <TextView
        android:id="@+id/answerA_root"
        android:layout_width="@dimen/x258"
        android:layout_height="49dp"
        android:layout_below="@id/ll"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/trainingcamp_answers_bg_normal"
        android:gravity="center"
        android:textColor="?attr/baseTheme"/>

    <TextView
        android:id="@+id/answerB_root"
        android:layout_width="@dimen/x258"
        android:layout_height="@dimen/x41"
        android:layout_below="@id/answerA_root"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/x17"
        android:background="@drawable/trainingcamp_answers_bg_normal"
        android:gravity="center"
        android:textColor="?attr/baseTheme"/>

    <TextView
        android:id="@+id/answerC_root"
        android:layout_width="@dimen/x258"
        android:layout_height="@dimen/x41"
        android:layout_below="@id/answerB_root"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/x17"
        android:background="@drawable/trainingcamp_answers_bg_normal"
        android:gravity="center"
        android:textColor="?attr/baseTheme"/>

    <TextView
        android:id="@+id/answerD_root"
        android:layout_width="@dimen/x258"
        android:layout_height="@dimen/x41"
        android:layout_below="@id/answerC_root"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/x17"
        android:background="@drawable/trainingcamp_answers_bg_normal"
        android:gravity="center"
        android:textColor="?attr/baseTheme"/>
    
    <!--<ImageView-->
        <!--android:layout_width=""-->
        <!--android:layout_height=""/>-->

</RelativeLayout>