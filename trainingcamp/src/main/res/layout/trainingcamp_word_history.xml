<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include
        android:id="@+id/title"
        layout="@layout/trainingcamp_title_layout"></include>
    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/x15"
        android:paddingBottom="@dimen/x15"
        android:layout_below="@+id/title"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/trainingcamp_oval_bg">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/trainingcamp_white_pure"
            android:textSize="@dimen/x15"
            android:text="闯关得分"/>
        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x17"
            android:text="89分"
            android:textColor="@color/trainingcamp_white_pure"
            android:textSize="@dimen/x32"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ll"></android.support.v7.widget.RecyclerView>
</RelativeLayout>