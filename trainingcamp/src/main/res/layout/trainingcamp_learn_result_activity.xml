<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/trainingcamp_white_pure"

              android:orientation="vertical">

    <include layout="@layout/trainingcamp_title_layout"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x130"
        android:layout_marginLeft="@dimen/x21"
        android:layout_marginRight="@dimen/x21"
        android:layout_marginTop="20dp"
        android:background="@drawable/trainingcamp_oval_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="28dp"
        android:paddingTop="28dp">

        <TextView
            android:id="@+id/tip_cn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp"
            android:text="恭喜您已完成单词学习！"
            android:textSize="@dimen/x16"
            android:textColor="@color/trainingcamp_white"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!--<ImageView-->
            <!--android:id="@+id/pro_img"-->
            <!--android:layout_width="22dp"-->
            <!--android:layout_height="22dp"-->
            <!--android:src="@drawable/fayin"-->
            <!--android:layout_marginRight="10dp"/>-->

            <TextView
                android:id="@+id/tip_en"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:textSize="@dimen/x14"
                android:text="Congratulations on Finishing Words !"
                android:textColor="@color/trainingcamp_white"/>
        </LinearLayout>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/learn_result_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:overScrollMode="never"
        android:layout_weight="1">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center">

        <!--<TextView-->
        <!--android:id="@+id/not_yet"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginLeft="15dp"-->
        <!--android:layout_marginRight="15dp"-->
        <!--android:layout_weight="1"-->
        <!--android:background="#08f97127"-->
        <!--android:gravity="center"-->
        <!--android:paddingBottom="11dp"-->
        <!--android:paddingTop="11dp"-->
        <!--android:text="还差一点点"-->
        <!--android:textColor="?attr/baseTheme" />-->

        <TextView
            android:id="@+id/go_test"
            android:layout_width="@dimen/x181"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/trainingcamp_study_selector"
            android:gravity="center"
            android:paddingBottom="11dp"
            android:paddingTop="11dp"
            android:text="开始闯关"
            android:textSize="@dimen/x14"
            android:textColor="@color/trainingcamp_white"/>
    </LinearLayout>
